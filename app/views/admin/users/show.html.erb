<%= link_to "Main Admin Page", admin_users_path %>

<h3>Full name: <%= @user.full_name %> (<%= link_to "edit", edit_admin_user_path(@user) %>)</h3>
<p>Email: <%= @user.email %></p>
<p>Date joined: <%= formatted_date(@user.created_at) %></p>

<hr>

<h4>Reviews by user</h4>

<% @reviews.each do |review| %>
  <p><%= review.movie.title %></p>
  <p><%= review.rating_out_of_ten %></p>
  <p><%= review.text %></p>
<% end %>

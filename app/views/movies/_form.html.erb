<%= form_for @movie, html: {multipart: true} do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div>
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>
  <div>
    <%= f.label :runtime_in_minutes %><br>
    <%= f.number_field :runtime_in_minutes %>
  </div>
  <div>
    <%= f.label :poster_image_url %><br>
    <%= f.file_field :poster_image_url %>

<!--     <% if f.object.poster_image_url? %>
      <% image_tag f.object.poster_image_url.thumb.url %>
      <% f.label :remove_poster_image_url %>
      <% f.check_box :remove_poster_image_url %>
    <% end %> -->
    
  </div>
  <div>
    <%= f.label :remote_poster_image_url_url %><br>
    <%= f.text_field :remote_poster_image_url_url %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>